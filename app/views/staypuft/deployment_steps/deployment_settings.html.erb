<%= render :layout => 'title' do %>
  <%= form_for(:deployment, :url => wizard_path, :method => 'PUT') do |f| %>
    <%# base_errors_for @deployment %>

    <div class="wizard-container">
      <%= deployment_wizard 1 %>
    </div>
    <%= text_f f, :name %><br />
    <%= text_f f, :title %><br />

    <div class="row">
     <%= f.label :distributed, _("Deployment Layout"), :class => "col-md-2 control-label" %><br />
      <div class="col-md-4">
        <!--     <%= f.radio_button :distributed, false %>
        <%= f.label :distributed, _("All-In-One"), :value => "aio"  %><br />-->
        <%= f.radio_button :distributed, false, :checked => false %>
        <%= f.label :distributed, _("Distributed"), :value => "distributed" %><br />
        <%= f.radio_button :distributed, false, :checked => true %>
        <%= f.label :distributed, _("Distributed With High Availability"), :value => "distributed-ha" %>
      </div>
   </div>

    <div class="row">
     <%= f.label :networking, _("Networking"), :class => "col-md-2 control-label" %><br />
     <div class="col-md-4">
       <%= f.radio_button :networking, false, :checked => false %>
       <%= f.label :networking, _("Nova Networking"), :value => "nova_networking" %><br />
       <%= f.radio_button :networking, false, :checked => true %>
       <%= f.label :networking, _("Neutron Networking"), :value => "neutron_networking" %>
     </div>
    </div>

    <div class="row">
     <%= f.label :services_password, _("Services Password"), :class => "col-md-2 control-label" %><br />
      <div class="row">
        <div class="col-md-8">
          <%= f.radio_button :services_password, false, :checked => true %>
          <%= f.label :services_password, _("Use single password for all services"), :value => "single_password" %><br />
          <div class="row">
            <%= f.label :password, _("Password*"), :class=>"col-md-3 control-label"%>
            <%= f.password_field :password,  :class=>"col-md-5" %>
          </div><br />
          <div class="row">
            <%= f.label :confirm_password, _("Confirm Password*"), :class=>"col-md-3 control-label" %>
            <%= f.password_field :confirm_password, :class=>"col-md-5" %>
          </div><br />
          <%= f.radio_button :services_password, false, :checked => false %>
          <%= f.label :services_password, _("Generate random passwords for all services"), :value => "random_password" %>
        </div>
      </div>
   </div>

    <div class="form_actions">
      <%= link_to _("Cancel"), deployments_path, :confirm => _("This will clear whole deployment configuration. Are you sure?"), :class => "btn btn-danger" %>
      <%= button_tag(:type => 'submit', :class => "btn btn-primary pull-right") do %>
        <%= _("Next") %>
        <span class="glyphicon glyphicon-chevron-right"></span>
      <% end %>
    </div>
  <% end %>
<% end %>
